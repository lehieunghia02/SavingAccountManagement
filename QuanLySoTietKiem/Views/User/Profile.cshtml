@using iTextSharp.text.pdf.qrcode
@model QuanLySoTietKiem.Entity.ApplicationUser
@{
    ViewData["Title"] = "Trang cá nhân";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@*Link to css*@
<link rel="stylesheet" href="~/css/user/profile/profile.css">

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="row justify-content-center g-4">
        <div class="col-md-10">
            <div class="card profile-card shadow-lg">
                <div class="profile-header text-white">
                    <div class="d-flex align-items-center"> 
                        <div class="text-center w-100">

                            @* Avatar với link *@
                            <div class="mb-3">
                                @if (Model.AvatarUrl == null)
                                {
                                    <img src="https://img.freepik.com/premium-vector/young-smiling-man-adam-avatar-3d-vector-people-character-illustration-cartoon-minimal-style_365941-687.jpg" alt="Avatar" class="rounded-circle"
                                         style="width: 120px; height: 120px; object-fit: cover;"/>
                                }
                                else
                                {
                                    <img src="@Model.AvatarUrl" alt="Avatar" class="rounded-circle"
                                         style="width: 120px; height: 120px; object-fit: cover;"/>
                                }
                            </div>
                            @* Tên và email *@
                            <div class="text-center">
                                <h2 class="mb-2">@Model.FullName</h2>
                                <p class="mb-0 opacity-75">@Model.Email</p>
                            </div>

                        </div>
                    </div>
                </div>
                @* Thông tin cá nhân *@
                @await Html.PartialAsync("Sections/User/Profile/_UserInfoSection", Model)
                <div class="card-footer bg-light p-4 text-center">
                    <div class="d-flex justify-content-center gap-3">
                        <a href="/User/EditProfile" class="btn btn-success btn-lg">
                            <i class="bi bi-pencil-fill me-2"></i>Chỉnh sửa thông tin
                        </a>
                        <a asp-action="Index" asp-controller="User" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-house-fill me-2"></i>Trở về trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}