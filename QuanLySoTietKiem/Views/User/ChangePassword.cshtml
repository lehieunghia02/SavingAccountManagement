@model QuanLySoTietKiem.Models.AccountModels.ChangePasswordModel.ChangePasswordModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Đổi mật khẩu</h2>

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.CurrentPassword, new { @class = "form-label" })
                @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "form-label" })
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "form-label" })
                @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmNewPassword, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success">Đổi mật khẩu</button>
            </div>
        }
    </div>
</div>