<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-plus-fill fa-2x me-2"></i>
                        <h3 class="mb-0">Register</h3>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="UserName" class="form-label fw-bold text-primary">
                                        <i class="bi bi-person-badge me-2"></i>Username
                                    </label>
                                    <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label fw-bold text-primary">
                                        <i class="bi bi-envelope-fill me-2"></i>Email
                                    </label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label fw-bold text-primary">
                                        <i class="bi bi-person-fill me-2"></i>Full name
                                    </label>
                                    <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label fw-bold text-primary">
                                        <i class="bi bi-geo-alt-fill me-2"></i>Address
                                    </label>
                                    <input asp-for="Address" class="form-control" placeholder="Enter address" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                @* <div class="mb-3">
                                    <label class="form-label fw-bold text-primary">
                                        <i class="bi bi-geo-alt-fill me-2"></i>Địa chỉ
