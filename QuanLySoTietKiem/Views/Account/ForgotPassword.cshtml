@model QuanLySoTietKiem.Models.AccountModels.ForgotPassword.ForgotPasswordModel
@{
  ViewData["Title"] = "Quên mật khẩu";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="py-5" style="background-color: #f8f9fa;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">
        <div class="card border-0 shadow-lg">
          <!-- Card Header -->
          <div class="card-header border-0 bg-gradient text-white p-4"
            style="background: linear-gradient(45deg, #007bff, #00bcd4);">
            <div class="d-flex align-items-center">
              <div class="rounded-circle bg-white p-2 me-3">
                <i class="bi bi-key-fill text-primary fs-4"></i>
              </div>
              <div>
                <h2 style="color: #080808;" class="mb-1 fw-bold">Quên mật khẩu?</h2>
                <p style="color: #080808;" class="mb-0 opacity-75">Nhập email của bạn để đặt lại mật khẩu</p>
              </div>
            </div>
          </div>

          <!-- Card Body -->
          <div class="card-body p-4">
            <form asp-action="ForgotPassword" method="post" class="needs-validation" novalidate>
              <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

              <!-- Email Field -->
              <div class="mb-4">
                <div class="form-floating">
                  <input asp-for="Email" class="form-control" placeholder="Nhập địa chỉ email" />
                  <label asp-for="Email">Địa chỉ email</label>
                  <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-text mt-2">
                  <i class="bi bi-info-circle me-1"></i>
                  Chúng tôi sẽ gửi một liên kết đặt lại mật khẩu đến email của bạn
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="d-flex justify-content-between align-items-center mt-4">
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                  <i class="bi bi-arrow-left me-2"></i>Quay lại đăng nhập
                </a>
                <button type="submit" class="btn btn-primary px-4 py-2">
                  <i class="bi bi-send-fill me-2"></i>Gửi yêu cầu
                </button>
              </div>

              <!-- Remember Password Link -->
              <div class="text-center mt-4">
                <p class="mb-0">Đã nhớ mật khẩu? <a asp-controller="Account" asp-action="Login"
                    class="text-primary fw-bold">Đăng nhập</a></p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Styles {
  <style>
    /* Animation classes */
    .card {
      animation: fadeIn 0.5s ease-out;
      transition: transform 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    @@keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }

        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .form-floating>.form-control:focus~label,
      .form-floating>.form-control:not(:placeholder-shown)~label {
        color: #0d6efd;
        opacity: 0.8;
      }
    </style>
  }

  @section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
      // Enable Bootstrap form validation
      (() => {
        'use strict'
        const forms = document.querySelectorAll('.needs-validation')
        Array.from(forms).forEach(form => {
          form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }
            form.classList.add('was-validated')
          }, false)
        })
      })()
    </script>
  }