@model QuanLySoTietKiem.Models.PaymentInformationModel

@{
    ViewData["Title"] = "Thanh toán thất bại";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-times-circle text-danger" style="font-size: 5rem;"></i>
                    </div>

                    <h1 class="display-4 fw-bold text-danger mb-4">Thanh Toán Thất Bại!</h1>

                    <p class="lead mb-4">
                        Rất tiếc, giao dịch của bạn không thể hoàn tất. Vui lòng kiểm tra lại thông tin và thử lại.
                    </p>

                    <div class="alert alert-danger mb-4">
                        <p class="mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Lỗi:</strong> @ViewBag.ErrorMessage
                        </p>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary px-4 py-2">
                            <i class="fas fa-home me-2"></i>Trang chủ
                        </a>
                        <a href="@Url.Action("Index", "NapTien")" class="btn btn-outline-primary px-4 py-2">
                            <i class="fas fa-redo me-2"></i>Thử lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Thêm hiệu ứng fade-in cho các phần tử
            $('.card').addClass('animate__animated animate__fadeIn');
        });
    </script>
}