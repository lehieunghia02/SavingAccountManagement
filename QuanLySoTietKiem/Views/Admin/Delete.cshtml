@model QuanLySoTietKiem.Entity.ApplicationUser
@{
  ViewData["Title"] = "Xóa người dùng";
  Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">Xác nhận xóa người dùng</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5><i class="fas fa-exclamation-triangle"></i> Cảnh báo!</h5>
                <p>Bạn có chắc chắn muốn xóa người dùng này? Hành động này không thể hoàn tác.</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Tên đăng nhập:</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Họ và tên:</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Số điện thoại:</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">CCCD/CMND:</dt>
                        <dd class="col-sm-8">@Model.CCCD</dd>

                        <dt class="col-sm-4">Địa chỉ:</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Số dư tài khoản:</dt>
                        <dd class="col-sm-8">@Model.SoDuTaiKhoan.ToString("N0") VNĐ</dd>
                    </dl>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.AvatarUrl))
            {
                  <div class="row mt-3">
                      <div class="col-md-4">
                          <div class="card">
                              <div class="card-header">Ảnh đại diện</div>
                              <div class="card-body text-center">
                                  <img src="@Model.AvatarUrl" alt="Avatar" class="img-thumbnail" style="max-width: 150px;" />
                              </div>
                          </div>
                      </div>
                  </div>
            }

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="UserList" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại danh sách
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xác nhận xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div> 