@{
  ViewData["Title"] = "Admin Dashboard";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
  <h1 class="text-center mb-4">Welcome to Admin Dashboard</h1>

  <div class="row">
    <!-- Quick Stats -->
    <div class="col-md-4 mb-4">
      <div class="card bg-primary text-white">
        <div class="card-body">
          <h5 class="card-title">Total Users</h5>
          <p class="display-4">@ViewBag.TotalUsers</p>
        </div>
      </div>
    </div>

    <div class="col-md-4 mb-4">
      <div class="card bg-success text-white">
        <div class="card-body">
          <h5 class="card-title">Active Accounts</h5>
          <p class="display-4">@ViewBag.ActiveAccounts</p>
        </div>
      </div>
    </div>

    <div class="col-md-4 mb-4">
      <div class="card bg-info text-white">
        <div class="card-body">
          <h5 class="card-title">Total Transactions</h5>
          <p class="display-4">@ViewBag.TotalTransactions</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="row mt-4">
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Quick Actions</h5>
        </div>
        <div class="card-body">
          <div class="list-group">
            <a asp-action="UserList" class="list-group-item list-group-item-action">
              <i class="bi bi-people me-2"></i>Manage Users
            </a>
            <a asp-action="Report" class="list-group-item list-group-item-action">
              <i class="bi bi-graph-up me-2"></i>View Reports
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">System Status</h5>
        </div>
        <div class="card-body">
          <p class="mb-2">
            <i class="bi bi-check-circle-fill text-success me-2"></i>
            System is running normally
          </p>
          <p class="mb-2">
            <i class="bi bi-clock-history me-2"></i>
            Last backup: @DateTime.Now.AddDays(-1).ToString("dd/MM/yyyy HH:mm")
          </p>
        </div>
      </div>
    </div>
  </div>
</div>