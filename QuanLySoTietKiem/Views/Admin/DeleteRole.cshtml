@model Microsoft.AspNetCore.Identity.IdentityRole
@{
  ViewData["Title"] = "Xóa quyền";
  Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">Xác nhận xóa quyền</h4>
        </div>
        <div class="card-body">
            @if (TempData["ErrorMessage"] != null)
            {
                  <div class="alert alert-danger alert-dismissible fade show" role="alert">
                      <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
                      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
            }

            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Bạn có chắc chắn muốn xóa quyền <strong>@Model.Name</strong>?
                <br />
                Hành động này không thể hoàn tác.
            </div>

            <dl class="row">
                <dt class="col-sm-2">ID:</dt>
                <dd class="col-sm-10">@Model.Id</dd>
                <dt class="col-sm-2">Tên quyền:</dt>
                <dd class="col-sm-10">@Model.Name</dd>
            </dl>

            <form asp-action="DeleteRole">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Xóa
                </button>
                <a asp-action="RoleList" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
      <script>
          // Tự động ẩn thông báo sau 5 giây
          setTimeout(function () {
              $('.alert-dismissible').alert('close');
          }, 5000);
      </script>
}