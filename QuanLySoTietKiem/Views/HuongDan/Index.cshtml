@{
  ViewData["Title"] = "Hướng dẫn sử dụng";
  Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
  /* Animations */
  @@keyframes fadeIn
  {
      from {
        opacity: 0;
      }

      to {
        opacity: 1;
      }
    }

    @@keyframes slideInUp
    {
        from {
          transform: translateY(30px);
          opacity: 0;
        }

        to {
          transform: translateY(0);
          opacity: 1;
        }
      }

      @@keyframes pulse {
          0% {
            transform: scale(1);
          }

          50% {
            transform: scale(1.03);
          }

          100% {
            transform: scale(1);
          }
        }

        /* Base styles */
        .guide-container {
          animation: fadeIn 0.8s ease-out;
          padding: 3rem 0;
          background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
        }

        .guide-header {
          text-align: center;
          margin-bottom: 3rem;
          position: relative;
        }

        .guide-title {
          color: #2c3e50;
          font-weight: 700;
          font-size: 2.5rem;
          margin-bottom: 1rem;
          position: relative;
          display: inline-block;
        }

        .guide-title:after {
          content: '';
          position: absolute;
          width: 70%;
          height: 4px;
          background: linear-gradient(90deg, #3498db, #2ecc71);
          bottom: -10px;
          left: 15%;
          border-radius: 2px;
        }

        .guide-subtitle {
          color: #7f8c8d;
          font-size: 1.2rem;
          max-width: 700px;
          margin: 0 auto;
        }

        .guide-card {
          border-radius: 15px;
          overflow: hidden;
          border: none;
          box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
          transition: all 0.4s ease;
          margin-bottom: 2rem;
          animation: slideInUp 0.5s ease-out;
          animation-fill-mode: both;
        }

        .guide-card:hover {
          transform: translateY(-10px);
          box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

        .guide-card-header {
          padding: 1.5rem;
          border-bottom: none;
          position: relative;
          overflow: hidden;
          color: white;
        }

        .guide-card-body {
          padding: 2rem;
          background-color: white;
        }

        .guide-section {
          margin-bottom: 2rem;
          padding-left: 1rem;
          border-left: 4px solid;
          transition: all 0.3s ease;
        }

        .guide-section:hover {
          transform: translateX(5px);
        }

        .guide-section-title {
          font-weight: 600;
          display: flex;
          align-items: center;
          margin-bottom: 1rem;
        }

        .guide-section-title i {
          margin-right: 0.8rem;
          font-size: 1.5rem;
        }

        .guide-list {
          list-style-type: none;
          padding-left: 2.5rem;
        }

        .guide-list li {
          margin-bottom: 0.8rem;
          position: relative;
          padding-left: 1.5rem;
          font-size: 1.05rem;
        }

        .guide-list li:before {
          content: '';
          position: absolute;
          left: 0;
          top: 10px;
          width: 8px;
          height: 8px;
          border-radius: 50%;
          background-color: currentColor;
        }

        /* Color schemes */
        .account-section {
          border-left-color: #3498db;
        }

        .account-section .guide-section-title {
          color: #3498db;
        }

        .account-section .guide-list li:before {
          background-color: #3498db;
        }

        .account-header {
          background: linear-gradient(135deg, #3498db, #2980b9);
        }

        .stats-section {
          border-left-color: #2ecc71;
        }

        .stats-section .guide-section-title {
          color: #2ecc71;
        }

        .stats-section .guide-list li:before {
          background-color: #2ecc71;
        }

        .stats-header {
          background: linear-gradient(135deg, #2ecc71, #27ae60);
        }

        .profile-section {
          border-left-color: #e74c3c;
        }

        .profile-section .guide-section-title {
          color: #e74c3c;
        }

        .profile-section .guide-list li:before {
          background-color: #e74c3c;
        }

        .profile-header {
          background: linear-gradient(135deg, #e74c3c, #c0392b);
        }

        .feature-icon {
          width: 60px;
          height: 60px;
          border-radius: 50%;
          display: flex;
          align-items: center;
          justify-content: center;
          margin-bottom: 1rem;
          color: white;
          font-size: 1.5rem;
          animation: pulse 2s infinite;
        }

        .feature-card {
          text-align: center;
          padding: 1.5rem;
          border-radius: 10px;
          background-color: white;
          box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
          transition: all 0.3s ease;
          height: 100%;
        }

        .feature-card:hover {
          transform: translateY(-5px);
          box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .feature-title {
          font-weight: 600;
          margin-bottom: 0.5rem;
          color: #2c3e50;
        }

        .feature-text {
          color: #7f8c8d;
          font-size: 0.95rem;
        }

        .icon-blue {
          background-color: #3498db;
        }

        .icon-green {
          background-color: #2ecc71;
        }

        .icon-red {
          background-color: #e74c3c;
        }

        .icon-purple {
          background-color: #9b59b6;
        }

        .icon-orange {
          background-color: #f39c12;
        }

        .icon-teal {
          background-color: #1abc9c;
        }
      </style>

      <div class="guide-container">
        <div class="container">
          <div class="guide-header">
            <h1 class="guide-title">Hướng Dẫn Sử Dụng Hệ Thống</h1>
            <p class="guide-subtitle">Tìm hiểu cách sử dụng các tính năng của hệ thống quản lý sổ tiết kiệm để tối ưu hóa trải
              nghiệm của bạn</p>
          </div>

          <!-- Tính năng nổi bật -->
          <div class="row mb-5">
            <div class="col-md-4 mb-4">
              <div class="feature-card">
                <div class="feature-icon icon-blue mx-auto">
                  <i class="bi bi-shield-lock"></i>
                </div>
                <h3 class="feature-title">An Toàn & Bảo Mật</h3>
                <p class="feature-text">Hệ thống được bảo mật nhiều lớp, đảm bảo thông tin của bạn luôn được bảo vệ tối đa</p>
              </div>
            </div>
            <div class="col-md-4 mb-4">
              <div class="feature-card">
                <div class="feature-icon icon-green mx-auto">
                  <i class="bi bi-graph-up"></i>
                </div>
                <h3 class="feature-title">Theo Dõi Tài Chính</h3>
                <p class="feature-text">Dễ dàng theo dõi và quản lý các khoản tiết kiệm của bạn với biểu đồ trực quan</p>
              </div>
            </div>
            <div class="col-md-4 mb-4">
              <div class="feature-card">
                <div class="feature-icon icon-orange mx-auto">
                  <i class="bi bi-lightning"></i>
                </div>
                <h3 class="feature-title">Nhanh Chóng & Tiện Lợi</h3>
                <p class="feature-text">Thao tác đơn giản, xử lý nhanh chóng giúp bạn tiết kiệm thời gian và công sức</p>
              </div>
            </div>
          </div>

          <!-- Hướng dẫn chi tiết -->
          <div class="row">
            <div class="col-lg-4 mb-4">
              <div class="guide-card">
                <div class="guide-card-header account-header">
                  <h3 class="mb-0"><i class="bi bi-wallet2 me-2"></i>Quản Lý Sổ Tiết Kiệm</h3>
                </div>
                <div class="guide-card-body">
                  <div class="guide-section account-section">
                    <h4 class="guide-section-title">
                      <i class="bi bi-plus-circle"></i>Mở Sổ Tiết Kiệm Mới
                    </h4>
                    <ul class="guide-list">
                      <li>Chọn "Mở sổ tiết kiệm" từ menu chính</li>
                      <li>Nhập số tiền gửi và chọn kỳ hạn phù hợp</li>
                      <li>Xác nhận thông tin và hoàn tất giao dịch</li>
                      <li>Nhận thông báo xác nhận qua email</li>
                    </ul>
                  </div>
                  <div class="guide-section account-section">
                    <h4 class="guide-section-title">
                      <i class="bi bi-search"></i>Tra Cứu Thông Tin Sổ
                    </h4>
                    <ul class="guide-list">
                      <li>Vào mục "Danh sách sổ tiết kiệm"</li>
                      <li>Tìm kiếm sổ theo mã số hoặc ngày mở</li>
                      <li>Xem chi tiết sổ bằng cách nhấp vào "Chi tiết"</li>
                    </ul>
                  </div>
                  <div class="guide-section account-section">
                    <h4 class="guide-section-title">
                      <i class="bi bi-cash-stack"></i>Rút Tiền/Đóng Sổ
                    </h4>
                    <ul class="guide-list">
                      <li>Chọn sổ tiết kiệm cần rút tiền</li>
                      <li>Nhấp vào "Rút tiền" và nhập số tiền cần rút</li>
                      <li>Xác nhận giao dịch và nhận tiền</li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-lg-4 mb-4">
              <div class="guide-card">
                <div class="guide-card-header stats-header">
                  <h3 class="mb-0"><i class="bi bi-bar-chart me-2"></i>Thống Kê Báo Cáo</h3>
                </div>
                <div class="guide-card-body">
                  <div class="guide-section stats-section">
                    <h4 class="guide-section-title">
                      <i class="bi bi-pie-chart"></i>Biểu Đồ Thống Kê
                    </h4>
                    <ul class="guide-list">
                      <li>Truy cập mục "Thống kê" từ menu chính</li>
                      <li>Xem biểu đồ phân bổ theo loại sổ</li>
                      <li>Phân tích xu hướng tiết kiệm theo thời gian</li>
                      <li>Lọc dữ liệu theo khoảng thời gian</li>
                    </ul>
                  </div>
                  <div class="guide-section stats-section">
                    <h4 class="guide-section-title">
                      <i class="bi bi-calendar-check"></i>Hoạt Động Theo Tháng
                    </h4>
                    <ul class="guide-list">
                      <li>Xem tổng quan hoạt động trong tháng</li>
                      <li>Theo dõi số sổ mở mới và đáo hạn</li>
                      <li>Phân tích lãi suất trung bình</li>
                    </ul>
                  </div>
                  <div class="guide-section stats-section">
                    <h4 class="guide-section-title">
                      <i class="bi bi-file-earmark-text"></i>Xuất Báo Cáo
                    </h4>
                    <ul class="guide-list">
                      <li>Chọn loại báo cáo cần xuất</li>
                      <li>Tùy chỉnh thông tin và định dạng</li>
                      <li>Tải xuống báo cáo dưới dạng PDF hoặc Excel</li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-lg-4 mb-4">
              <div class="guide-card">
                <div class="guide-card-header profile-header">
                  <h3 class="mb-0"><i class="bi bi-person-circle me-2"></i>Quản Lý Tài Khoản</h3>
                </div>
                <div class="guide-card-body">
                  <div class="guide-section profile-section">
                    <h4 class="guide-section-title">
                      <i class="bi bi-pencil-square"></i>Cập Nhật Thông Tin
                    </h4>
                    <ul class="guide-list">
                      <li>Truy cập "Thông tin cá nhân" từ menu</li>
                      <li>Cập nhật thông tin liên hệ khi cần thiết</li>
                      <li>Xác nhận thay đổi bằng mật khẩu</li>
                      <li>Nhận thông báo xác nhận qua email</li>
                    </ul>
                  </div>
                  <div class="guide-section profile-section">
                    <h4 class="guide-section-title">
                      <i class="bi bi-key"></i>Đổi Mật Khẩu
                    </h4>
                    <ul class="guide-list">
                      <li>Vào mục "Bảo mật" trong tài khoản</li>
                      <li>Nhập mật khẩu hiện tại và mật khẩu mới</li>
                      <li>Xác nhận thay đổi và đăng nhập lại</li>
                    </ul>
                  </div>
                  <div class="guide-section profile-section">
                    <h4 class="guide-section-title">
                      <i class="bi bi-bell"></i>Quản Lý Thông Báo
                    </h4>
                    <ul class="guide-list">
                      <li>Tùy chỉnh loại thông báo bạn muốn nhận</li>
                      <li>Chọn phương thức nhận thông báo</li>
                      <li>Đặt lịch nhắc nhở cho các sổ sắp đáo hạn</li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Hỗ trợ -->
          <div class="row mt-4">
            <div class="col-12">
              <div class="guide-card">
                <div class="guide-card-header" style="background: linear-gradient(135deg, #9b59b6, #8e44ad);">
                  <h3 class="mb-0"><i class="bi bi-headset me-2"></i>Hỗ Trợ & Trợ Giúp</h3>
                </div>
                <div class="guide-card-body">
                  <div class="row">
                    <div class="col-md-4">
                      <div class="text-center mb-4">
                        <div class="feature-icon icon-purple mx-auto">
                          <i class="bi bi-chat-dots"></i>
                        </div>
                        <h4 class="feature-title">Chat Trực Tuyến</h4>
                        <p class="feature-text">Nhận hỗ trợ ngay lập tức từ đội ngũ chăm sóc khách hàng của chúng tôi</p>
                        <button class="btn btn-outline-primary mt-2">Bắt Đầu Chat</button>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="text-center mb-4">
                        <div class="feature-icon icon-teal mx-auto">
                          <i class="bi bi-question-circle"></i>
                        </div>
                        <h4 class="feature-title">Câu Hỏi Thường Gặp</h4>
                        <p class="feature-text">Tìm câu trả lời nhanh chóng cho những thắc mắc phổ biến</p>
                        <button class="btn btn-outline-success mt-2">Xem FAQ</button>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="text-center mb-4">
                        <div class="feature-icon icon-red mx-auto">
                          <i class="bi bi-telephone"></i>
                        </div>
                        <h4 class="feature-title">Hotline Hỗ Trợ</h4>
                        <p class="feature-text">Gọi cho chúng tôi để được hỗ trợ trực tiếp từ nhân viên</p>
                        <button class="btn btn-outline-danger mt-2">1900 1234</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      @section Scripts {
        <script>
          document.addEventListener('DOMContentLoaded', function () {
            // Thêm hiệu ứng xuất hiện dần cho các phần tử
            const guideCards = document.querySelectorAll('.guide-card');
            guideCards.forEach((card, index) => {
              card.style.animationDelay = `${0.1 * (index + 1)}s`;
            });

            // Thêm hiệu ứng hover cho các mục hướng dẫn
            const guideSections = document.querySelectorAll('.guide-section');
            guideSections.forEach(section => {
              section.addEventListener('mouseenter', function () {
                this.style.transform = 'translateX(10px)';
              });

              section.addEventListener('mouseleave', function () {
                this.style.transform = '';
              });
            });
          });
        </script>
      }
