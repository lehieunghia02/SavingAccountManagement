@{
    ViewData["Title"] = "Chính sách bảo mật";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/home/privacy.css">
<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white py-3">
            <h2 class="mb-0">
                <i class="bi bi-shield-lock me-2"></i>
                Chính sách bảo mật
            </h2>
        </div>
        <div class="card-body">
            <section class="mb-5">
                <h4 class="text-primary mb-4">1. Thông tin chúng tôi thu thập</h4>
                <div class="ps-4">
                    <p>Chúng tôi thu thập các thông tin sau từ người dùng:</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <i class="bi bi-person-badge me-2 text-primary"></i>
                            Thông tin cá nhân (họ tên, địa chỉ, số CCCD)
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-envelope me-2 text-primary"></i>
                            Thông tin liên hệ (email, số điện thoại)
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-wallet2 me-2 text-primary"></i>
                            Thông tin tài khoản ngân hàng
                        </li>
                    </ul>
                </div>
            </section>

            <section class="mb-5">
                <h4 class="text-primary mb-4">2. Mục đích sử dụng thông tin</h4>
                <div class="ps-4">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <i class="bi bi-check-circle me-2 text-success"></i>
                            Xác thực danh tính người dùng
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-check-circle me-2 text-success"></i>
                            Quản lý tài khoản tiết kiệm
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-check-circle me-2 text-success"></i>
                            Thông báo các thay đổi và cập nhật dịch vụ
                        </li>
                    </ul>
                </div>
            </section>

            <section class="mb-5">
                <h4 class="text-primary mb-4">3. Bảo mật thông tin</h4>
                <div class="ps-4">
                    <p>Chúng tôi cam kết:</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <i class="bi bi-shield-check me-2 text-success"></i>
                            Mã hóa thông tin nhạy cảm
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-shield-check me-2 text-success"></i>
                            Không chia sẻ thông tin với bên thứ ba
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-shield-check me-2 text-success"></i>
                            Tuân thủ các quy định về bảo mật thông tin
                        </li>
                    </ul>
                </div>
            </section>

            <section class="mb-5">
                <h4 class="text-primary mb-4">4. Quyền của người dùng</h4>
                <div class="ps-4">
                    <p>Người dùng có quyền:</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <i class="bi bi-person-check me-2 text-primary"></i>
                            Yêu cầu truy cập thông tin cá nhân
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-pencil-square me-2 text-primary"></i>
                            Chỉnh sửa thông tin cá nhân
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-trash me-2 text-primary"></i>
                            Yêu cầu xóa tài khoản
                        </li>
                    </ul>
                </div>
            </section>
        </div>
    </div>
</div>
