<div class="card-body p-4">
  <!-- Thông tin tài khoản -->
  <div class="balance-card mb-4 animate__animated animate__fadeInUp">
    <div class="text-center">
      <h5 class="mb-3 opacity-75">Số dư tài khoản</h5>
      <h2 class="mb-0">@Model.SoDuTaiKhoan.ToString("C0", new
        System.Globalization.CultureInfo("vi-VN"))</ h2 >
    </div>
  </div>

  <!-- Thông tin cá nhân -->
  <div class="row">
    <div class="col-md-6">
      <div class="info-group animate__animated animate__fadeInLeft">
        <div class="info-label">
          <i class="bi bi-person-badge me-2"></i>Căn cước công dân
        </div>
        <div class="info-value">@Model.CCCD</div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="info-group animate__animated animate__fadeInRight">
        <div class="info-label">
          <i class="bi bi-telephone me-2"></i>Số điện thoại
        </div>
        <div class="info-value">@Model.PhoneNumber</div>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-6">
      <div class="info-group animate__animated animate__fadeInLeft" style="animation-delay: 0.2s">
        <div class="info-label">
          <i class="bi bi-geo-alt me-2"></i>Địa chỉ
        </div>
        <div class="info-value">@Model.Address</div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="info-group animate__animated animate__fadeInRight" style="animation-delay: 0.2s">
        <div class="info-label">
          <i class="bi bi-person me-2"></i>Tên đăng nhập
        </div>
        <div class="info-value">@Model.UserName</div>
      </div>
    </div>
  </div>
</div>