@model QuanLySoTietKiem.Models.SavingsAccount.SoTietKiemDetailModel
@{
  ViewData["Title"] = "Chi tiết sổ tiết kiệm";
  Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
  /* Animations */
  @@keyframes fadeIn
  {
      from {
        opacity: 0;
      }

      to {
        opacity: 1;
      }
    }

    @@keyframes slideInUp
    {
        from {
          transform: translateY(30px);
          opacity: 0;
        }

        to {
          transform: translateY(0);
          opacity: 1;
        }
      }

      @@keyframes pulse {
          0% {
            transform: scale(1);
          }

          50% {
            transform: scale(1.05);
          }

          100% {
            transform: scale(1);
          }
        }

        @@keyframes shimmer {
            0% {
              background-position: -1000px 0;
            }

            100% {
              background-position: 1000px 0;
            }
          }

          @@keyframes gradientBg {
              0% {
                background-position: 0% 50%;
              }

              50% {
                background-position: 100% 50%;
              }

              100% {
                background-position: 0% 50%;
              }
            }

            /* Base styles */
            .detail-container {
              animation: fadeIn 0.8s ease-out;
            }

            .detail-card {
              border-radius: 20px;
              overflow: hidden;
              border: none;
              box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
              transition: all 0.4s ease;
            }

            .detail-card:hover {
              transform: translateY(-10px);
              box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            }

            .card-header-gradient {
              background: linear-gradient(135deg, #1976d2, #64b5f6, #0d47a1);
              background-size: 200% 200%;
              animation: gradientBg 10s ease infinite;
              color: white;
              padding: 1.5rem;
              border-bottom: none;
              position: relative;
              overflow: hidden;
            }

            .card-header-gradient::before {
              content: '';
              position: absolute;
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
              background: linear-gradient(90deg,
                  rgba(255, 255, 255, 0) 0%,
                  rgba(255, 255, 255, 0.2) 50%,
                  rgba(255, 255, 255, 0) 100%);
              animation: shimmer 3s infinite;
            }

            .header-icon {
              font-size: 2.5rem;
              margin-right: 1rem;
              animation: pulse 2s infinite;
            }

            .info-section {
              padding: 2rem;
            }

            .info-item {
              padding: 1.2rem;
              border-radius: 15px;
              background: #f8f9fa;
              margin-bottom: 1.2rem;
              transition: all 0.3s ease;
              border-left: 5px solid transparent;
              animation: slideInUp 0.5s ease-out;
              animation-fill-mode: both;
            }

            .info-item:nth-child(1) {
              animation-delay: 0.1s;
              border-left-color: #2196f3;
            }

            .info-item:nth-child(2) {
              animation-delay: 0.2s;
              border-left-color: #4caf50;
            }

            .info-item:nth-child(3) {
              animation-delay: 0.3s;
              border-left-color: #ff9800;
            }

            .info-item:nth-child(4) {
              animation-delay: 0.4s;
              border-left-color: #9c27b0;
            }

            .info-item:nth-child(5) {
              animation-delay: 0.5s;
              border-left-color: #e91e63;
            }

            .info-item:hover {
              background: white;
              box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
              transform: translateY(-5px) scale(1.02);
            }

            .info-label {
              color: #6c757d;
              font-size: 0.95rem;
              margin-bottom: 0.5rem;
              display: flex;
              align-items: center;
            }

            .info-label i {
              font-size: 1.2rem;
              margin-right: 0.5rem;
              color: #1976d2;
            }

            .info-value {
              font-size: 1.2rem;
              color: #212529;
              font-weight: 600;
            }

            .money-value {
              color: #00695c;
              font-weight: 700;
              font-size: 1.3rem;
              position: relative;
              display: inline-block;
              padding: 0.3rem 0.8rem;
              background-color: rgba(0, 150, 136, 0.1);
              border-radius: 10px;
            }

            .interest-value {
              color: #ff6f00;
              font-weight: 700;
              font-size: 1.2rem;
              padding: 0.3rem 0.8rem;
              background-color: rgba(255, 152, 0, 0.1);
              border-radius: 10px;
              display: inline-block;
            }

            .status-active {
              animation: pulse 2s infinite;
              background: linear-gradient(45deg, #2e7d32, #4caf50) !important;
              box-shadow: 0 5px 15px rgba(76, 175, 80, 0.3);
              padding: 0.5rem 1rem;
              border-radius: 30px;
              font-weight: 600;
            }

            .status-inactive {
              background: linear-gradient(45deg, #c62828, #f44336) !important;
              box-shadow: 0 5px 15px rgba(244, 67, 54, 0.3);
              padding: 0.5rem 1rem;
              border-radius: 30px;
              font-weight: 600;
            }

            .card-footer-custom {
              background: #f8f9fa;
              border-top: none;
              padding: 1.5rem;
            }

            .btn-action {
              padding: 0.6rem 1.5rem;
              border-radius: 50px;
              font-weight: 600;
              transition: all 0.3s ease;
              box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            }

            .btn-back {
              background: linear-gradient(45deg, #546e7a, #78909c);
              border: none;
              color: white;
            }

            .btn-back:hover {
              background: linear-gradient(45deg, #455a64, #546e7a);
              transform: translateY(-3px);
              box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
              color: white;
            }

            .btn-withdraw {
              background: linear-gradient(45deg, #ff9800, #ff5722);
              border: none;
              color: white;
            }

            .btn-withdraw:hover {
              background: linear-gradient(45deg, #f57c00, #e64a19);
              transform: translateY(-3px);
              box-shadow: 0 8px 20px rgba(255, 152, 0, 0.3);
              color: white;
            }

            .alert-custom {
              border-radius: 15px;
              border: none;
              box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
              padding: 1.2rem;
              margin-top: 2rem;
              background: linear-gradient(45deg, rgba(33, 150, 243, 0.1), rgba(33, 150, 243, 0.2));
              border-left: 5px solid #2196f3;
              animation: fadeIn 1s ease-out;
              animation-delay: 0.8s;
              animation-fill-mode: both;
            }

            .account-id {
              background: rgba(255, 255, 255, 0.2);
              padding: 0.3rem 0.8rem;
              border-radius: 50px;
              font-size: 0.9rem;
            }
          </style>

          <div class="container mt-5 detail-container">
            <div class="detail-card shadow-lg">
              <div class="card-header-gradient">
                <div class="d-flex align-items-center">
                  <i class="bi bi-bank header-icon"></i>
                  <div class="flex-grow-1">
                    <h2 class="mb-1 fw-bold">Chi Tiết Sổ Tiết Kiệm</h2>
                    <p class="mb-0 opacity-75">Thông tin chi tiết về sổ tiết kiệm của bạn</p>
                  </div>
                  <span class="account-id">Mã sổ: @Model.MaSoTietKiem</span>
                </div>
              </div>

              <div class="info-section">
                <div class="row">
                  <div class="col-md-6">
                    <div class="info-item">
                      <div class="info-label">
                        <i class="bi bi-person-circle"></i>Khách hàng
                      </div>
                      <div class="info-value">@Model.TenKhachHang</div>
                    </div>

                    <div class="info-item">
                      <div class="info-label">
                        <i class="bi bi-cash"></i>Số Tiền Gửi Ban Đầu
                      </div>
                      <div class="info-value">
                        <span class="money-value">@Model.SoTienGui.ToString("N0") VNĐ</span>
                      </div>
                    </div>

                    <div class="info-item">
                      <div class="info-label">
                        <i class="bi bi-wallet2"></i>Số Dư Hiện Tại
                      </div>
                      <div class="info-value">
                        <span class="money-value">@Model.SoDuSoTietKiem.ToString("N0") VNĐ</span>
                      </div>
                    </div>

                    <div class="info-item">
                      <div class="info-label">
                        <i class="bi bi-calendar2"></i>Loại Sổ
                      </div>
                      <div class="info-value">
                        @if (@Model.KyHan == 0)
                        {
                          <span>Không kỳ hạn</span>
                        }
                        else
                        {
                          <span>@Model.KyHan tháng</span>
                        }
                      </div>
                    </div>

                    <div class="info-item">
                      <div class="info-label">
                        <i class="bi bi-cash-stack"></i>Số tiền thực hưởng nếu rút hôm nay
                      </div>
                      <div class="info-value">
                        <span class="money-value">@Model.SoTienThucHuong.ToString("N0") VNĐ</span>
                      </div>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="info-item">
                      <div class="info-label">
                        <i class="bi bi-arrow-repeat"></i>Hình Thức Đáo Hạn
                      </div>
                      <div class="info-value">@Model.TenHinhThucDenHan</div>
                    </div>

                    <div class="info-item">
                      <div class="info-label">
                        <i class="bi bi-percent"></i>Lãi Suất Áp Dụng
                      </div>
                      <div class="info-value">
                        <span class="interest-value">@Model.LaiSuatApDung.ToString("P1")</span>
                      </div>
                    </div>

                    <div class="info-item">
                      <div class="info-label">
                        <i class="bi bi-calendar-check"></i>Ngày Mở Sổ
                      </div>
                      <div class="info-value">@Model.NgayMoSo.ToString("dd/MM/yyyy")</div>
                    </div>

                    <div class="info-item">
                      <div class="info-label">
                        <i class="bi bi-calendar-event"></i>Ngày Đáo Hạn
                      </div>
                      <div class="info-value">@Model.NgayDaoHan.ToString("dd/MM/yyyy")</div>
                    </div>

                    <div class="info-item">
                      <div class="info-label">
                        <i class="bi bi-circle-fill"></i>Trạng Thái
                      </div>
                      <div class="info-value">
                        @if (Model.TrangThai)
                        {
                          <span class="badge status-active">
                            <i class="bi bi-check-circle me-1"></i>Đang hoạt động
                          </span>
                        }
                        else
                        {
                          <span class="badge status-inactive">
                            <i class="bi bi-x-circle me-1"></i>Đã đóng
                          </span>
                        }
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="card-footer-custom">
                <div class="d-flex justify-content-between align-items-center">
                  <a asp-action="Index" class="btn btn-action btn-back">
                    <i class="bi bi-arrow-left me-2"></i>Quay Lại
                  </a>
                  @if (Model.TrangThai)
                  {
                    <div class="d-flex gap-2">
                      <a asp-action="WithdrawMoney" asp-route-id="@Model.MaSoTietKiem" class="btn btn-action btn-withdraw">
                        <i class="bi bi-cash-stack me-2"></i>Rút Tiền
                      </a>
                    </div>
                  }
                </div>
              </div>
            </div>

            @if (Model.TrangThai)
            {
              <div class="alert-custom">
                <div class="d-flex align-items-center">
                  <i class="bi bi-info-circle-fill me-3 fs-3 text-primary"></i>
                  <div>
                    <h5 class="mb-1">Lưu ý về việc rút tiền</h5>
                    <p class="mb-0">Bạn có thể rút tiền bất kỳ lúc nào, nhưng sẽ được áp dụng lãi suất không kỳ hạn nếu rút trước
                      ngày đáo hạn.</p>
                  </div>
                </div>
              </div>
            }
          </div>

          @section Scripts {
            <script>
              document.addEventListener('DOMContentLoaded', function () {
                // Thêm hiệu ứng hover cho các phần tử
                const infoItems = document.querySelectorAll('.info-item');
                infoItems.forEach(item => {
                  item.addEventListener('mouseenter', function () {
                    this.style.transform = 'translateY(-5px) scale(1.02)';
                  });

                  item.addEventListener('mouseleave', function () {
                    this.style.transform = '';
                  });
                });
              });
            </script>
          }